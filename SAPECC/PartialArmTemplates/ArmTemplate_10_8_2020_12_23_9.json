{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "SAPECC"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/EmployeeBlob')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "BlobDemo",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "Employee Personal.csv",
						"folderPath": "Year/Month",
						"container": "container1"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Employee No",
						"type": "String"
					},
					{
						"name": "Employee Name",
						"type": "String"
					},
					{
						"name": "Department",
						"type": "String"
					},
					{
						"name": "Leave Type",
						"type": "String"
					},
					{
						"name": "Entitled",
						"type": "String"
					},
					{
						"name": "Approved",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Employee Personal')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Employee Personal",
				"activities": [
					{
						"name": "Employee Personal - Pipeline",
						"description": "Employee Personal - Pipeline",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "Employee No",
											"type": "Int64",
											"physicalType": "bigint"
										},
										"sink": {
											"name": "Employee No",
											"type": "Int64",
											"physicalType": "bigint"
										}
									},
									{
										"source": {
											"name": "Employee Name",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Employee Name",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Department",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Department",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Dependents",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Dependents",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Education",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Education",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Address",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Address",
											"type": "String",
											"physicalType": "char"
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "EmployeeBlob",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "EmployeePersonal",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/EmployeeBlob')]"
			]
		}
	]
}